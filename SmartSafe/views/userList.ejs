<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<!-- include nav header -->
<%- include('include/_navheader') %>
<!-- /include nav header -->
  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/addUser" class="border-shadow">
                <span class="text-gradient">New User <i class="fas fa-user"></i></span>
            </a>
        </div>

        <!-- form handling -->
    <form id="add_user">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody><% 
            for(var i = 0; i < users.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= users[i].firstname %></td>
                    <td><%= users[i].lastname %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].username %></td>
                    <td><%= users[i].password %></td>
                    <td>
                        <a href="/users/<%= users[i].id%>" class="btn border-shadow update">
                            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                        </a>
                        <!--a class="btn border-shadow delete" data-id=<%= users[i]._id%> >
                            <span class="text-gradient"><i class="fas fa-times"></i></span>
                        </a -->
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
 </form>
    </div>
</main>
<!-- /Main Site -->
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->