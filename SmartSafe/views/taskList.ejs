<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/addTask" class="border-shadow">
                <span class="text-gradient">New Task <i class="fas fa-list"></i></span>
            </a>
        </div>
        <!-- form handling -->
        <form id="add_user">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Task</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody><%
                for(var i = 0; i < tasks.length; i++) {                     
                        let date = new Date(tasks[i].createdAt).toDateString();
                    %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= tasks[i].title %></td>
                        <td><%= tasks[i].task %></td>
                        <td><%= date%></td>
                        <td>
                            <a href="/tasks/<%= tasks[i].id%>" class="btn border-shadow update">
                                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                            </a>
                            <a class="btn border-shadow delete" data-id='<%= tasks[i].id%>' >
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </form>
    </div>
</main>
