<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<!-- include nav header -->
<%- include('include/_navheader') %>
<!-- /include nav header -->
<main id="site-main"><%
if (task.id === null){%>
    <div class="text-center" style="margin: 0;"><h3>Add New Task</h3></div><%
} else {%>
    <div class="text-center" style="margin: 0;"><h3>Modify Task</h3></div><%
}%>
<div class="container">
    <form action="/tasks" method="POST" id="add_user">
        <div class="new_user">
            <div class="form-group">
                <label for="title" class="text-light">Title</label>
                <input type="hidden" name="id" value="<%=task.id%>">
                <input type="text" id="title" name="title" value="<%=task.title%>" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="description" class="text-light">Description</label>
                <textarea id="task" name="task"><%=task.task%></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </form>
</div>
</main>
<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->